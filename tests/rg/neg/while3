global var x:
_L: TRUE

global var y:
_L: TRUE

global var lock:
_L: TRUE

global var access:
_L: x != 1 || y != 1

local var secret:

_Gamma_0: secret -> HIGH
// _Rely: (lock == 2) => (y == y' && x == x')
_Rely: (y == y' && x == x')
_Guar: TRUE // (lock != 2) => (access == access')

lock = 2;
while (x != 1 && y != 1) {
	x = 1;
	y = 1;
}

access = secret;
